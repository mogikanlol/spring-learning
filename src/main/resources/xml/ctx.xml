<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <import resource="ctx-one.xml"/>
    <import resource="database-conf.xml"/>

    <bean class="com.example.domain.InjectRandomLevelAnnotationBeanPostProcessor"/>

    <bean id="player" class="com.example.domain.Player">
        <constructor-arg index="0" value="Player"/>
        <property name="level" value="5"/>
    </bean>


    <!--Service Layer-->
    <bean id="playerService" class="com.example.service.PlayerServiceImpl">
        <constructor-arg ref="playerMapper"/>
    </bean>

    <!--Dao Layer-->
    <bean id="playerMapper" class="org.mybatis.spring.mapper.MapperFactoryBean">
        <property name="sqlSessionFactory" ref="sqlSessionFactory"/>
        <property name="mapperInterface" value="com.example.persistence.PlayerMapperGroovy"/>
    </bean>

    <bean id="liquibase" class="liquibase.integration.spring.SpringLiquibase">
        <property name="changeLog" value="classpath:db/changelog/db_changelog_master.xml"/>
        <property name="dataSource" ref="dataSource"/>
    </bean>
</beans>